@model IEnumerable<Card>

<row>
    <div class="col-lg-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">People</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Content</th>
                                <th>Setting</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="/assets/img/@item.Image" /></td>
                                    <td>@item.Name</td>
                                    <td>@item.Content</td>
                                    <td>
                                        <a class="btn btn-warning" asp-route-id="@item.Id" asp-action="Update">
                                        Update</a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" class="d-inline " method="post">
                                            <button type="submit" class="btn btn-danger">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <a asp-area="Admin" asp-controller="Card" asp-action="Create" class="btn btn-success">Create Person</a>
                    </table>
                </div>
            </div>
        </div>
    </div>
</row>